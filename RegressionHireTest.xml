<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="3">
    <test verbose="2" preserve-order="true" name="Chrome">
        <parameter name="BrowserType" value="chrome"></parameter>
        <classes>
            <class name="Regression.RegressionHireTest">
                <methods>
                    <include name="testSuccessfulLoginHire"/>
                    <include name="testSuccessfulUpdateHireProfile"/>
                    <include name="testSuccessfulFilterWorkers"/>
                    <include name="testSuccessfulCreateContracts"/>
                    <include name="testSuccessfulHireLogOut"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Edge">
        <parameter name="BrowserType" value="edge"></parameter>
        <classes>
            <class name="Regression.RegressionHireTest">
                <methods>
                    <include name="testSuccessfulLoginHire"/>
                    <include name="testSuccessfulUpdateHireProfile"/>
                    <include name="testSuccessfulFilterWorkers"/>
                    <include name="testSuccessfulCreateContracts"/>
                    <include name="testSuccessfulHireLogOut"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Firefox">
        <parameter name="BrowserType" value="firefox"></parameter>
        <classes>
            <class name="Regression.RegressionHireTest">
                <methods>
                    <include name="testSuccessfulLoginHire"/>
                    <include name="testSuccessfulUpdateHireProfile"/>
                    <include name="testSuccessfulFilterWorkers"/>
                    <include name="testSuccessfulCreateContracts"/>
                    <include name="testSuccessfulHireLogOut"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>